<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20000000">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="48dp">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:elevation="12dp"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_profile_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/fab_camera" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="16dp">

                <EditText
                    android:id="@+id/et_aadhar_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/registration_name"
                    android:fontFamily="sans-serif"
                    android:hint="Aadhar No."
                    android:inputType="number"
                    android:maxLength="16" />


                <EditText
                    android:id="@+id/et_birth_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/registration_birth_year"
                    android:fontFamily="sans-serif"
                    android:hint="Birth Year"
                    android:inputType="number"
                    android:maxLength="4" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/registration_gender"
                    android:editable="false"
                    android:fontFamily="sans-serif"
                    android:hint="Register as" />

                <Spinner
                    android:id="@+id/spinner_registration_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="48dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/basicRegistration3Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/registration_arrow" />
    </LinearLayout>
</ScrollView>