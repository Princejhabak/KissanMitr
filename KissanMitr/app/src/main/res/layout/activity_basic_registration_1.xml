<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20000000"
    android:orientation="vertical"
    android:padding="32dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="64dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp">

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/registration_name"
                android:fontFamily="sans-serif"
                android:hint="Name"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/et_register_father_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/registration_name"
                android:fontFamily="sans-serif"
                android:hint="Father's Name "
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv_register_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/registration_gender"
                android:fontFamily="sans-serif"
                android:hint="Gender"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/registrationRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/registrationRadio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="18dp"
                    android:text="Male"
                    android:textColor="#808080"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/registrationRadio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:text="Female"
                    android:textColor="#808080"
                    android:textSize="18sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/registraion_mobile"
                android:fontFamily="sans-serif"
                android:hint="Mobile No."
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:padding="16dp"
                android:text="NOTE : Mobile No. will be verifed by OTP, make sure you enter correct number."
                android:textColor="#000000" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Already registerd ? Sign in"
        android:textSize="18sp"
        android:textAlignment="center" />

</LinearLayout>